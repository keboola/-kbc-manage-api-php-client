{
    "name": "keboola/kbc-manage-api-php-client",
    "description": "Keboola Management API Client",
    "require": {
        "php" : "^7.1|^8.0",
        "guzzlehttp/guzzle": "^6.1"
    },
    "require-dev": {
        "keboola/coding-standard": "^13.0",
        "keboola/storage-api-client": "^7.0",
        "phpcompatibility/php-compatibility": "^9.3",
        "phpunit/phpunit": "^7.0|^8.0"
    },
    "autoload": {
        "psr-4": {
            "Keboola\\ManageApi\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Keboola\\ManageApiTest\\": "tests/"
        }
    },
    "scripts": {
        "ci": [
            "@phpcs-compatibility",
            "@phpcs"
        ],
        "phpcs-compatibility": "phpcs --config-set installed_paths vendor/phpcompatibility/php-compatibility && phpcs --ignore=*vendor/* -n . --standard=PHPCompatibility --runtime-set testVersion 7.1-8.0",
        "phpcs": "phpcs -s -n -p --extensions=php . src tests",
        "tests": "phpunit"
    },
    "authors": [
        {
            "name": "Martin Halamicek",
            "email": "martin@keboola.com"
        }
    ],
    "config": {
        "sort-packages": true,
        "lock": false
    }
}
